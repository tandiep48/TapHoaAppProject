<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    tools:context=".InfoFragment">-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Thông tin cá nhân"
        app:titleTextColor="@color/colorWhite" />
    <TextView
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:id="@+id/Info_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diệp Tân"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/Info_email"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dieptan@gmail.com"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/Info_age"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/Info_gender"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nam"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/Info_phone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07793345"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnStoreInfo"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/btnChangeInfo"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Sửa thông tin"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStoreInfo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnChangeInfo"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:text="Giới thiệu cửa hàng"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                app:layout_constraintRight_toLeftOf="@id/btnLogout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/btnChangePass"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Đổi mật khẩu"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnChangePass"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:text="Đăng xuất"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>